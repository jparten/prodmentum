<h1> Ideas </h1>  
<div class="row">
  <div class="col-md-2 col-md-offset-2">
    <p>Add a <%= link_to "New Idea", new_idea_path %></p>
    <ul> 
    <% @ideas.each do |idea| %> 
      <li> 
        <h3> 
          <%= link_to(idea.name, idea) %> 
        </h3>
        <p> 
          <%= truncate(idea.description, length: 100, separator: ' ') %> 
        </p> 
      </li>
    <% end %> 
  </ul> 
  </div>
</div>