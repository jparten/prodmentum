<%= form_for(@idea) do |f| %> 

<%= render "shared/errors", object: @idea %> 

<fieldset> 

  <ol> 
    <li> 
      <%= f.label :name %> 
      <%= f.text_field :name %> 
    </li> 

    <li> 
      <%= f.label :description %> 
      <%= f.text_area :description %> 
    </li> 

  </ol> 
  <p> 
    <%= f.submit %> 
    <%= link_to "Cancel", ideas_path %> 
  </p> 

</fieldset> 

<% end %> 