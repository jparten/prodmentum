<header> 
  <h1> All Ideas </h1> 
</header> 
<ul> 
  <% @ideas.each do |idea| %> 
    <li> 
      <h3> 
        <%= link_to(idea.name, idea) %> 
      </h3>
      <p> 
        <%= truncate(idea.description, length: 100, separator: ' ') %> 
      </p> 
    </li>
  <% end %> 
</ul> 

<p> 
  Add a <%= link_to "New Idea", new_idea_path %>
</p> 