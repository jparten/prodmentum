<h1> Competitors </h1>  
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p>Add a <%= link_to "New Competitor", new_competitor_path %></p>

    <% @competitors.each do |competitor| %> 
      <div class="col-md-3"> 

            <h3> 
              <%= link_to(competitor.name, competitor) %> 
            </h3>
            <p> 
              <%= truncate(competitor.description, length: 100, separator: ' ') %> 
            </p> 

      </div> 
    <% end %> 

  </div>
</div>