 <%= render "shared/errors", object: @feature %> 
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@feature) do |f| %> 
    <%= render "shared/errors", object: @feature %> 

      <div class="form-group">
        <%= f.label :name %> 
        <%= f.text_field :name, class: "form-control"  %> 
      </div> 

      <div class="form-group">
        <%= f.label :description %> 
        <%= f.text_area :description, class: "form-control"  %> 
      </div> 

      <div class="form-group">
        <%= f.label :status %> 
        <%= f.select(:status, options_for_select([['Complete', 'Complete'], ['In-Development', 'In-Development'], ['In-Design', 'In-Design'], ['On-Deck', 'On-Deck'], ['Backlog', 'Backlog'], ['Unscheduled', 'Unscheduled']])) %> 
      </div>

      <div class="form-group">
        <%= f.submit "Save Feature", class: "btn btn-primary" %>
      </div> 
     <% end %> 
  </div>
</div>