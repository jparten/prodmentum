<h1>Create a product</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name%>

      <%= f.label :description %>
      <%= f.text_field :description%>

      <%= f.submit "Save New Product", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>