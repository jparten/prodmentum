<h1> Products </h1>  
<div class="row">
  <div class="col-md-2 col-md-offset-2">
    <p>Add a <%= link_to "New Product", new_product_path %></p>
    <ul> 
    <% @products.each do |product| %> 
      <li> 
        <h3> 
          <%= link_to(product.name, product) %> 
        </h3>
        <p> 
          <%= truncate(product.description, length: 100, separator: ' ') %> 
        </p> 
      </li>
    <% end %> 
  </ul> 
  </div>
</div>