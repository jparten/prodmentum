
<h1> Ideas </h1>  
<div class="center"> 
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p>Add a <%= link_to "New Idea", new_idea_path %></p>
    <% @ideas.each do |idea| %> 
      <div class="col-md-3"> 

            <h3> 
              <%= link_to(idea.name, idea) %> 
            </h3>
            <p> 
              <%= truncate(idea.description, length: 100, separator: ' ') %> 
            </p> 
      </div> 
    <% end %> 
  </div>
</div>
</div> 

