<h1> Features </h1>  
<div class="row">
  <div class="col-md-2 col-md-offset-2">
    <p>Add a <%= link_to "New Feature", new_feature_path %></p>
    <ul> 
    <% @features.each do |feature| %> 
      <li> 
        <h3> 
          <%= link_to(feature.name, feature) %> 
        </h3>
        <p> 
          <%= truncate(feature.description, length: 100, separator: ' ') %> 
        </p> 
        <p> 
          Status: <%= feature.status %> 
        </p> 
      </li>
    <% end %> 
  </ul> 
  </div>
</div>