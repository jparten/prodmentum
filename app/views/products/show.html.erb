<h1><%= @product.name %> </h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2"> 
      <p><%= @product.description %></p>
      <h2>Product Image</h2>
      <p><%= image_tag @product.image.url %></p>
      <h2>Product Revenue (KPI)</h2>
      <p><%= image_tag @product.kpi_url if !@product.kpi_url.nil? %></p> 
      <h2><%= @product.features.count %> Features</h2>
      <% @product.features.each do |f| %>
        <p><%= link_to f.name, feature_path(f.id) %></p>
      <% end %>

      <h2>Add a feature:</h2>
      <%= render "features/form" %>

      <footer> 
        <%= link_to 'Edit', edit_product_path(@product)%> 
        <%= link_to 'Delete', @product, method: :delete, data: { confirm: "Are you sure?" } %> 
        <%= link_to 'Back', products_path %> 
      </footer> 
  </div>
</div>